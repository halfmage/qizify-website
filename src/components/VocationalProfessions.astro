---
import { Icon } from 'astro-icon/components';

interface ProfessionItem {
	icon: string;
	title: string;
	professions: string[];
}

interface Props {
	headline: string;
	items: ProfessionItem[];
}

const { headline, items } = Astro.props;
---

<section class="py-12 md:py-20 px-4 md:px-8 bg-dark" id="vocational-professions">
	<div class="max-w-container mx-auto">
		<h2 class="text-center text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-12 md:mb-16">
			{headline}
		</h2>
		
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
			{items.map((item) => (
				<div class="bg-gray/30 border border-gray rounded-2xl p-6 md:p-8 flex flex-col gap-4 md:gap-5 hover:-translate-y-1 hover:border-primary transition-all duration-300">
					<div class="w-14 h-14 md:w-16 md:h-16 flex items-center justify-center bg-gradient-to-br from-primary to-[#5554d1] rounded-2xl">
						<Icon name={item.icon} class="w-8 h-8 md:w-10 md:h-10 text-white" />
					</div>
					<h3 class="text-xl md:text-2xl font-semibold text-white m-0 leading-snug">
						{item.title}
					</h3>
					<ul class="flex flex-col gap-2 m-0 p-0 list-none">
						{item.professions.map((profession) => (
							<li class="text-base leading-relaxed text-white/80 flex items-start gap-2">
								<span class="text-primary mt-1">â€¢</span>
								<span>{profession}</span>
							</li>
						))}
					</ul>
				</div>
			))}
		</div>
	</div>
</section>

