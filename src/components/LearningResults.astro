---
import { Icon } from 'astro-icon/components';

interface Feature {
	icon: string;
	title: string;
	description: string;
}

interface Props {
	badge: string;
	headline: string;
	features: Feature[];
	compliance: string;
}

const { badge, headline, features, compliance } = Astro.props;
---

<section class="py-12 md:py-20 px-4 md:px-8 bg-dark" id="learning-results">
	<div class="max-w-container mx-auto">
		<div class="text-center mb-12 md:mb-16">
			<div class="inline-block px-4 py-2 bg-primary/20 border border-primary rounded-full text-white text-sm font-medium uppercase tracking-wider mb-4">
				{badge}
			</div>
			<h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white m-0">
				{headline}
			</h2>
		</div>
		
		<div class="relative mb-12 md:mb-16">
			<img
				src="/images/screenshots/learnslice-copilot-02.jpg"
				alt="LearnSlice AI-powered learning platform interface showing adaptive mentoring, assessments, analytics, and gamification features"
				class="w-full h-auto block object-contain max-w-4xl mx-auto relative z-30 shadow-2xl rounded-xl border-2 border-white/10"
				loading="lazy"
				width="1200"
				height="800"
			/>
			<img
				src="/images/screenshots/learnslice-copilot-04.jpg"
				alt="LearnSlice AI-powered learning platform interface showing adaptive mentoring, assessments, analytics, and gamification features"
				class="object-contain absolute left-0 bottom-0 rounded-xl z-20 border-2 border-white/10 opacity-90"
				loading="lazy"
				width="600"
				height="400"
			/>
			<img
				src="/images/screenshots/learnslice-copilot-06.jpg"
				alt="LearnSlice AI-powered learning platform interface showing adaptive mentoring, assessments, analytics, and gamification features"
				class="object-contain absolute right-0 bottom-0 rounded-xl z-20 border-2 border-white/10 opacity-90"
				loading="lazy"
				width="600"
				height="400"
			/>
			<img src="/images/blurredbackground.png" alt="Blur" class="absolute inset-0 -top-8 w-full h-full object-cover z-10" loading="lazy" width="1200" height="800" />
		</div>
		
		<div class="grid grid-cols-1 md:grid-cols-4 gap-6 lg:gap-8 mb-12 md:mb-16">
			{features.map((feature) => (
				<div class="bg-gray/30 border border-gray rounded-2xl p-6 md:p-8 flex flex-col gap-3 md:gap-4 hover:-translate-y-1 hover:border-primary transition-all duration-300">
					<div class="w-12 h-12 flex items-center justify-center bg-gradient-to-br from-primary to-[#5554d1] rounded-xl mb-2">
						<Icon name={feature.icon} class="w-8 h-8 text-white" />
					</div>
					<h3 class="text-xl md:text-2xl font-semibold text-white m-0 leading-snug">
						{feature.title}
					</h3>
					<p class="text-base leading-relaxed text-white/80 m-0">
						{feature.description}
					</p>
				</div>
			))}
		</div>
		
		<div class="text-center">
			<p class="text-base leading-relaxed text-white/90 m-0">
				{compliance}
			</p>
		</div>
	</div>
</section>
