---
interface Props {
	variant?: 'primary' | 'secondary';
	href?: string;
	type?: 'button' | 'submit';
	onClick?: string;
	class?: string;
	'aria-label'?: string;
}

const { 
	variant = 'primary', 
	href, 
	type = 'button',
	onClick,
	class: className = '',
	'aria-label': ariaLabel
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold text-sm transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-black';
const variantClasses = {
	primary: 'bg-[#5554d1] text-white hover:bg-[#5554d1] hover:transform hover:-translate-y-0.5 active:transform active:translate-y-0 focus:ring-[var(--color-primary)]',
	secondary: 'bg-transparent border-2 border-[var(--color-gray)] text-white hover:border-[var(--color-primary)] hover:text-[var(--color-primary)] focus:ring-[var(--color-primary)]'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

{href ? (
	<a href={href} class={classes} aria-label={ariaLabel}>
		<slot />
	</a>
) : (
	<button 
		type={type} 
		class={classes}
		aria-label={ariaLabel}
		{...(onClick && { onClick: onClick })}
	>
		<slot />
	</button>
)}

