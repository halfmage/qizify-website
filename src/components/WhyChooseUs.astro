---
import { Icon } from 'astro-icon/components';

interface TrustItem {
	icon: string;
	title: string;
	description: string;
}

interface Props {
	headline: string;
	items: TrustItem[];
}

const { headline, items } = Astro.props;
---

<section class="py-12 md:py-20 px-4 md:px-8 bg-dark" id="why-choose-us">
	<div class="max-w-container mx-auto">
		<h2 class="text-center text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-12 md:mb-16">
			{headline}
		</h2>
		
		<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 lg:gap-8">
			{items.map((item) => (
				<div class="bg-gray/30 border border-gray rounded-2xl p-6 md:p-8 flex flex-col gap-3 md:gap-4 text-center hover:-translate-y-1 hover:border-primary transition-all duration-300">
					<div class="w-14 h-14 md:w-16 md:h-16 mx-auto mb-2 md:mb-4 flex items-center justify-center bg-gradient-to-br from-primary to-[#5554d1] rounded-2xl">
						<Icon name={item.icon} class="w-8 h-8 md:w-10 md:h-10 text-white" />
					</div>
					<h3 class="text-xl md:text-2xl font-semibold text-white m-0 leading-snug">
						{item.title.split('\n').map((line, index) => (
							<>
								{line}
								{index < item.title.split('\n').length - 1 && <br />}
							</>
						))}
					</h3>
					<p class="text-base leading-relaxed text-white/80 m-0">
						{item.description}
					</p>
				</div>
			))}
		</div>
	</div>
</section>
